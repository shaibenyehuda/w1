{
  "name": "Wix Page Cluster",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Replace static pages with dynamic pages by clustering",
  "homepage_url": "http://wix.com",
  "web_accessible_resources" : ["lib/jsonpath.js","lib/cycle.js","squeeze-in-editor.js","cluster.js","router-file-content.js"],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Cluster pages"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ]
}